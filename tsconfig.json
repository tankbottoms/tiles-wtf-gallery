{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"preserveValueImports": true,
		"isolatedModules": true,
		"allowJs": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"lib": ["DOM"],
		"paths": {
			"$env": ["src/env"],
			"$env/*": ["src/env/*"],
			"$lib": ["src/lib"],
			"$lib/*": ["src/lib/*"],
			"$stores": ["src/stores"],
			"$stores/*": ["src/stores/*"],
			"$utils": ["src/utils"],
			"$utils/*": ["src/utils/*"],
			"$assets": ["src/assets"],
			"$assets/*": ["src/assets/*"],
			"$constants": ["src/constants"],
			"$constants/*": ["src/constants/*"],
			"$models": ["src/models"],
			"$models/*": ["src/models/*"],
			"$data": ["src/data"],
			"$data/*": ["src/data/*"],
			"$deployments": ["src/deployments"],
			"$deployments/*": ["src/deployments/*"],
		}
	}
}
